
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
<h1>展示所有新闻</h1>

<table border="solid">
  <thead>
    <tr>
      <th>标题</th>
      <th>发布时间</th>
    </tr>
  </thead>

  <tbody>
    <% @news.each do |n| %>
      <tr>
        <td><a href="/news/show_news/<%= n.id %>"><%= n.title %></a></td>
        <td><%= n.created_at.strftime("%Y-%m-%d %H:%M") %></td>
      </tr>
    <% end %>
  </tbody>
</table>