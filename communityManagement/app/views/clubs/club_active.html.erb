<div>
  <table border="1px" style="" width="80%">
    <tr>
      <th width="20%" >待审核社团名称</th>
      <th width="20%" >待审核社团邮箱</th>
      <th width="20%" >待审核社团社长</th>
      <th width="20%" >申请时间</th>
      <th width="20%" >待审核社团状态</th>
    </tr>
    <!--循环@clubs对象集合-->
    <% @clubs.each do |club| %>
      <tr>
        <td><%= link_to "#{club.club_name}", club_path(club.id)  %></td>
        <td><%= club.club_email %></td>
        <td><%= club.get_real_name %></td>
        <td><%= club.created_at.strftime("%Y-%m-%d %H:%m") %></td>
        <% if club.status == 0 %>
          <td><%= link_to '未审批', "/update_active/#{club.id}", data: { confirm: 'Are you sure?' } %></td>
        <% else %>
          <td>已审批</td>
        <% end %>
      </tr>
    <% end %>
  </table>
</div>
