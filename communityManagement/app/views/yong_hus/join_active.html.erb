<div>
  <table border="1px" style="" width="80%">
    <tr>
      <th width="20%" >待审用户</th>
      <th width="20%" >待审核用户邮箱</th>
      <th width="20%" >申请时间</th>
      <th width="20%" >待审核社团状态</th>
    </tr>
    <!--循环@applications对象集合-->
    <% @applications.each do |app| %>
      <tr>
        <td><%= app.get_real_name %></td>
        <td><%= app.get_yong_hu_email %></td>
        <td><%= app.created_at.strftime("%Y-%m-%d %H:%m") %></td>
        <% if app.status == 0 %>
          <td><%= link_to '未审批', "/yong_hus/update_active/#{app.yong_hu_id}", data: { confirm: 'Are you sure?' } %></td>
        <% else %>
          <td>已审批</td>
        <% end %>
      </tr>
    <% end %>
  </table>
</div>
