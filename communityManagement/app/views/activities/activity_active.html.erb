<div>
  <table border="1px" style="" width="80%">
    <tr>
      <th width="20%" >待审批活动名称</th>
      <th width="20%" >活动申请时间</th>
      <th width="20%" >待审批活动状态</th>
    </tr>
    <!--循环@activities对象集合-->
    <% @activities.each do |act| %>
      <tr>
        <td><%= link_to "#{act.act_name}", activity_path(act.id)  %></td>
<!--        <td><%#= act.act_name%></td>-->
        <td><%= act.created_at.strftime("%Y-%m-%d %H:%m") %></td>
        <% if act.status == 0 %>
          <td><%= link_to '未审批', "/activities/update_active/#{act.id}", data: { confirm: 'Are you sure?' } %></td>
        <% else %>
          <td>已审批</td>
        <% end %>
      </tr>
    <% end %>
  </table>
</div>
